<%- include('layouts/head', {title: `Комната № ${room.name}`, bootstrap5 : true}) -%>
    <div class="wrapper col-xl-5 col-lg-6 col-md-7 col-sm-9 col-10 text-center mx-auto">
        <div class="wrapper__topside">
            <div class="wrapper__inner border-round-all bg_theme-main mt-3">
                <header class="container heading py-2">
                    <div class="row">
                        <h1 class="heading__text text_theme-h1">Камень ножницы бумага</h1>
                    </div>
                </header>
                <section class="container score mb-3">
                    <% if (room.owner === guestToken ) { %>
                        <div class="row">
                            <div class="col-sm-6 d-flex justify-content-center align-items-center">
                                <span class="score__container">
                                    <p class="d-inline">Ваш счёт: </p>
                                    &nbsp
                                    <p class="score__player d-inline" id="points_output_one">
                                        <%- room.owner_points -%>
                                    </p>
                                </span>
                            </div>
                            <div class="col-sm-6 d-flex justify-content-center align-items-center">
                                <span class="score__container">
                                    <p class="d-inline jopa">Счёт оппонента:</p>
                                    &nbsp 
                                    <p class="score__enemy d-inline" id="points_output_two" >
                                        <%- room.invited_points -%>
                                    </p>
                                </span>
                            </div>
                        </div>
                        <% } else { %>
                            <div class="row">
                                <div class="col-sm-6 d-flex justify-content-center align-items-center">
                                    <span class="score__container">
                                        <p class="d-inline">Ваш счёт: </p>
                                        &nbsp
                                        <p class="score__player d-inline" id="points_output_one">
                            
                                            <%- room.invited_points -%>
                                        </p>
                                    </span>
                                </div>
                                <div class="col-sm-6 d-flex justify-content-center align-items-center">
                                    <span class="score__container">
                                        <p class="d-inline jopa">Счёт оппонента:</p>
                                        &nbsp 
                                        <p class="score__enemy d-inline" id="points_output_two" >
                                            <%- room.owner_points -%>
                                        </p>
                                    </span>
                                </div>
                            </div>
                            <% } %>
                </section>
                <section class="buttons container pb-3">
                    <div class="row row-cols-2 row-cols-sm-3">
                        <div class="col col-6 mx-auto d-flex justify-content-center align-items-center">
                            <button class="btn btn-item btn-outline-warning buttons__item buttons__item_color-yellow" name="rock" href='#'>
                                <img data-type="rock" class="img-fluid img-size" src='/img/rock1.png'>
                            </button>
                        </div>
                        <div class="col col-6 mx-auto d-flex justify-content-center align-items-center">
                            <button class="btn btn-item btn-outline-danger buttons__item buttons__item_color-red" name="scissors" href='#'>
                                <img data-type="scissors" class="img-fluid img-size" src='/img/scissors1.png'>
                            </button>
                        </div>
                        <div class="col col-6 mx-auto d-flex justify-content-center align-items-center">
                            <button class="btn btn-item btn-outline-success buttons__item buttons__item_color-green" name="paper" href='#'>
                                <img data-type="paper" class="img-fluid img-size" src='/img/paper1.png'>
                            </button>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>

    <div class="modal fade result" id="result-output" tabindex="-1" aria-labelledby="result-output-label" aria-hidden="true">
        <div class="modal-dialog modal-sm result__row">
            <div class="modal-content result__col">
                <div class="modal-header result__header">
                    <h5 class="modal-title text_theme-h2 mx-auto" id="result-output-label">Результат игры:</h5>
                </div>
                <div class="modal-body result__body">
                    <p class="result__output text-center"></p>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade result" id="joined" tabindex="-1" aria-labelledby="result-output-label" aria-hidden="true">
        <div class="modal-dialog modal-sm result__row">
            <div class="modal-content result__col">
                <div class="modal-header result__header">
                    <h5 class="modal-title text_theme-h2 mx-auto" id="result-output-label">
                        Статус
                    </h5>
                </div>
                <div class="modal-body result__body">
                    <p class="result__output text-center"></p>
                </div>
            </div>
        </div>
    </div>
    </body>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://cdn.socket.io/4.4.1/socket.io.min.js" integrity="sha384-fKnu0iswBIqkjxrhQCTZ7qlLHOFEgNkRmK2vaO/LbTZSXdJfAu6ewRBdwHPhBo/H" crossorigin="anonymous"></script>
    <script src="/js/modal.js"></script>
    <script src="/js/socket.js"></script>

    </html>